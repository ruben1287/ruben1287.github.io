---
import { PROFILE_INFO } from "@/lib/constants/profile";

interface Props {
  className?: string;
  size?: number;
  priority?: boolean;
}

const {
  className,
  size = 100, // Default size if not provided
  priority = false,
} = Astro.props;

---

<img
  class:list={[className]}
  src="/avatar.png"
  width={size}
  height={size}
  alt={`${PROFILE_INFO.displayName}'s avatar`}
  loading={priority ? "eager" : "lazy"}
  decoding="async"
/>
